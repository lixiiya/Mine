#include <stdio.h>
#include <conio.h>
#include <windows.h>

int width = 20; // 游戏地图的宽度
int height = 10; // 游戏地图的高度
int gameOver = 0; // 游戏结束标志
int x, y, fruitX, fruitY, score; // 贪吃蛇和水果的位置，分数

int tailX[100], tailY[100]; // 蛇的尾巴位置
int nTail; // 蛇的尾巴长度

enum eDirection { STOP = 0, LEFT, RIGHT, UP, DOWN }; // 贪吃蛇的方向
enum eDirection dir;

void Setup()
{
    gameOver = 0;
    dir = STOP;
    x = width / 2;
    y = height / 2;
    fruitX = rand() % width;
    fruitY = rand() % height;
    score = 0;
